        <jaxws:implementor> 
            <bean class="es.gob.aapp.csvstorage.webservices.document.impl.BIGFILEStreamingServiceImpl"> 
            </bean> 
        </jaxws:implementor> 
    </jaxws:endpoint> 
</beans>
